
{% if pages > 1 %}
 
<nav>

    <ul class="pagination">
        {% for page in 1.. pages  %}
        <li class="{{ (page == currentPage)? 'active' : ''}}"> <a href="{{path(path, {slug:slug, page:page })}}">{{page }}</a></li>   

        {% endfor %}
      
      

    </ul>
</nav>
{% endif %}


    
