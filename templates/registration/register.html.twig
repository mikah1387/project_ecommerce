{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
  {# {{ dump(registrationForm) }} #}
    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}

    <fieldset>
        <legend> Mon identitée</legend>

        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.zipcode) }}
        {{ form_row(registrationForm.city) }}
    </fieldset>
    <fieldset>
        <legend>Mes cordonnées </legend>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
      

        {{ form_row(registrationForm.RGPDConsent) }}
        
    </fieldset>
       

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
